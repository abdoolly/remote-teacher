enum UserType {
    TEACHER
    STUDENT
}

type Subject @db(name:"subjects") {
  _id: ID! @id
  name: String!
  ar_name: String
  photoUrl: String
  grade: String
}

type User @db(name: "users") {
  _id: ID! @id
  fullName: String
  phone: String! @unique
  userType: UserType
  password: String
  grade: String
  subjects: [Subject] @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}